    "preserveConstEnums": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
